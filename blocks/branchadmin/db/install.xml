<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="block/branchadmin/db" VERSION="20101203" COMMENT="XMLDB file for Moodle block/readytohelp"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="branchadmin_centre_info" COMMENT="List of Centres">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="analysis_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="name" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="nearbycentres" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="zone" TYPE="char" LENGTH="5" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="status" TYPE="char" LENGTH="1" NOTNULL="true" SEQUENCE="false" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
            </KEYS>
        </TABLE>
        <TABLE NAME="branchadmin_ttbatches" COMMENT="List of batches">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="analysis_id" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="name" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="centreid" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="targetyear" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="batch" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="visibletoall" TYPE="char" LENGTH="1" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="iszenith" TYPE="char" LENGTH="1" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="ismd" TYPE="char" LENGTH="1" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="status" TYPE="char" LENGTH="1" NOTNULL="true" SEQUENCE="false" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
            </KEYS>
        </TABLE>
        <TABLE NAME="branch_sms_record" COMMENT="Record of sms sent by the branches">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="sender" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="receipients" TYPE="text" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="message" TYPE="text" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="timestamp" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
            </KEYS>
        </TABLE>
        <TABLE NAME="attendance" COMMENT="Record of student">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="date" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="batch" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="schedule_id" TYPE="text" LENGTH="50"  NOTNULL="true" SEQUENCE="false" />
                <!--<FIELD NAME="topic_id" TYPE="text" NOTNULL="true" SEQUENCE="false" />-->
                <FIELD NAME="roll_numbers" TYPE="text" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="sms_status" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>