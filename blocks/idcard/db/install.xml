<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="block/idcard/db" VERSION="20101203" COMMENT="XMLDB file for Moodle block/idcard"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="idcard" COMMENT="ID card approval and image">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
                <FIELD NAME="username" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT=""/>
                <FIELD NAME="profilepic" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Link to the profile picture."/>
                <FIELD NAME="status" TYPE="int" LENGTH="2" NOTNULL="true" SEQUENCE="false" COMMENT="1-Approved. 0-Pending"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="username" TYPE="foreign" FIELDS="username" REFTABLE="rao_user" REFFIELDS="id" />
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>