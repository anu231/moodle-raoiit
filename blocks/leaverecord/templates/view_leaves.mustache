<h4>View Apply Leaves</h4>
<table>
<tr>
<td><div class="square"></div></td>
<td class="index-header">Leave Type (F=Full Leave, H= Half Leave)</td>
<td style="width:10px;">&nbsp;</td>

<td><div class="square"></div></td>
<td class="index-header">Status (0=Pending Approval, 1=Approved, -1=Rejected)</td>
<td style="width:10px;">&nbsp;</td>


</tr>
</table>
<table class="view_student_list_table_td_th view_student_list_table" width="100%">
        <thead>
            <tr>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Leave Type</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Date</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Start Time</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >End Time</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Remark</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Reason</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Status</th>
            </tr>
        </thead>
        <tbody>
{{#view_leaves}}
        {{#id}} 
                <tr>
                <td class="view_student_list_th view_student_list_table_td_td">{{leave_type}}</td>
                <td class="view_student_list_th view_student_list_table_td_td">{{date}}</td>
                 <td class="view_student_list_th view_student_list_table_td_td">{{start_time}}</td>
                  <td class="view_student_list_th view_student_list_table_td_td">{{end_time}}</td>
                <td class="view_student_list_th view_student_list_table_td_td">{{remark}}</td>
                <td class="view_student_list_th view_student_list_table_td_td">{{reason}}</td>
                <td class="view_student_list_th view_student_list_table_td_td">{{status}}</td>
            </tr>
        {{/id}}
  
{{/view_leaves}}
  </tbody>
    </table>

<style>
   .view_student_list_table_td_th {
   border: 1px solid #314c9a; 
   }
   .view_student_list_table {
   border-collapse: collapse;
   width: 100%; text-align: center;
   }
    .view_student_list_table_td_td {
   border: 1px solid #ccc; 
   }
   .view_bg{ background:#21409a; color:#fff;}
   h6{color:#21409a;}
   
.square{background:#21409a; height:10px; width:10px;}
.index-header{font-size:12px;}
</style>

