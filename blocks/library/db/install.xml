<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="block/library/db" VERSION="20101203" COMMENT="XMLDB file for Moodle block/library"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="lib_bookmaster" COMMENT="List of books">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="bookid" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="name" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="subject" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="volume" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="publisher" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="author" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="price" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="barcode" TYPE="char" LENGTH="15" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="branch" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="purchasedate" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="branchissuedate" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="issued" TYPE="int" LENGTH="3" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="remark" TYPE="char" LENGTH="200" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="status" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="is_scanned" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false" />
                <!--status = 0 available, 1 issued, -1 lost or out of system -->
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
            </KEYS>
        </TABLE>
        <TABLE NAME="lib_issue_record" COMMENT="List of books issue record">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="bookid" TYPE="char" LENGTH="10" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="branch_issuer" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="student_username" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="issue_date" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" />
              <!-- <FIELD NAME="limit_date" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" />-->
                <FIELD NAME="return_date" TYPE="char" LENGTH="10" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="branch_id" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="status" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="false" />
                <!-- status => 0 issued, 1 returned, -1 lost/damaged -->
                <!--<FIELD NAME="lost" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" />-->
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
                <KEY NAME="bookid" TYPE="foreign" FIELDS="bookid" REFTABLE="lib_bookmaster" REFFIELDS="id"/>
            </KEYS>
        </TABLE>
        <TABLE NAME="lib_fine_record" COMMENT="List of books fine record">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="issue_id" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="bookid" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="branch_issuer" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="student_username" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="amount" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="return_date" TYPE="char" LENGTH="10" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="book_status" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="branch_id" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" />  
                <FIELD NAME="remark" TYPE="char" LENGTH="200" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="paid" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="false" DEFAULT="0"/>
                <FIELD NAME="is_submitted" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" />  
                <!-- paid = 0(default),1 paid -->
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
                <KEY NAME="issue_id" TYPE="foreign" FIELDS="issue_id" REFTABLE="lib_issue_record" REFFIELDS="id"/>
            </KEYS>
        </TABLE>
       
    </TABLES>
</XMLDB>