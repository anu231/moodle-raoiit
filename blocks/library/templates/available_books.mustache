
<div>
    <h3 align="center">Available Books Records</h3>

    <table class="view_student_list_table_td_th view_student_list_table" width="100%">
        <thead>
            <tr>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Subject</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Book Id</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Book Name</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Volume</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Publisher</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Author</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Price</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Barcode</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >If Lost Book</th>
            </tr>
        </thead>
        <tbody>
        
    {{#available_books}}
            <tr>
                <td class="view_student_list_th view_student_list_table_td_td" style="padding:5px;">{{subject}}</td>
                <td class="view_student_list_th view_student_list_table_td_td" style="padding:5px;">{{bookid}}</td>
                <td class="view_student_list_th view_student_list_table_td_td" style="padding:5px;">{{name}}</td>
                <td class="view_student_list_th view_student_list_table_td_td" style="padding:5px;">{{volume}}</td>
                <td class="view_student_list_th view_student_list_table_td_td" style="padding:5px;">{{publisher}}</td>
                <td class="view_student_list_th view_student_list_table_td_td" style="padding:5px;">{{author}}</td>
                <td class="view_student_list_th view_student_list_table_td_td" style="padding:5px;">{{price}}</td>
                <td class="view_student_list_th view_student_list_table_td_td" style="padding:5px;">{{barcode}}</td>
                <td class="view_student_list_th view_student_list_table_td_td" style="padding:5px;"><a onclick="branch_alert()" href='lost_book_branch.php?book_id={{id}}'>Lost Book (From Branch)</a></td>
            </tr>
    {{/available_books}}
    
    {{^available_books}}
            <tr>
                <td class="view_student_list_th view_student_list_table_td_td" colspan="9" style="padding:5px;">There are no books available in library</td>
            </tr>
    {{/available_books}}

        </tbody>
    </table>
</div>
