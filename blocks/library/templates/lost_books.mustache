<div>
        <h3><center>All Lost Books</center></h3>
    <table class="view_student_list_table_td_th view_student_list_table">
      <tbody>
     <tr>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Book Id</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Book Name</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Volume</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Publisher</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Author</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Price</th>
                <th class="view_student_list_th view_student_list_table_td_th view_bg" >Barcode</th>
