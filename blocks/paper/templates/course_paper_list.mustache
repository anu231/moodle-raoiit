<h3>Available papers for {{coursename}}</h3>
<div class="paper-list-container">
{{#papers}}
<div class="paper-div">
    <div class="paper-info">
        <div class="paper-date">Date: <b>{{date}}</b></div>
        <div class="paper-duration">Duration: <b>{{duration}}</b></div>
        <div class="paper-name">{{name}}</div>
    </div>
    <div class="controls"><a href="{{viewlink}}" class="btn btn-primary">View Details</a></div>
</div>
{{/papers}}
</div>

<link rel="stylesheet" href="templates/css/paper_list.css">
