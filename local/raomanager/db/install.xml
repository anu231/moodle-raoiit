<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/raomanager/db" VERSION="20101203" COMMENT="XMLDB file for Moodle local/raomanager"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="raomanager_admins" COMMENT="Users and their plugin access">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
                <FIELD NAME="username" TYPE="char" LENGTH="255" NOTNULL="false" COMMENT=""/>
                <FIELD NAME="pluginname" TYPE="char" LENGTH="255" NOTNULL="false" COMMENT="Name of plugin that the user has access to"/>
                <FIELD NAME="modified" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="username" TYPE="foreign" FIELDS="username" REFTABLE="user" REFFIELDS="username" />
            </KEYS>
        </TABLE>

        <TABLE NAME="raomanager_batches" COMMENT="All the batches">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
                <FIELD NAME="batch" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="BatchID"/>
                <FIELD NAME="centerid" TYPE="char" LENGTH="255" NOTNULL="false"  COMMENT="Name of center of the batch"/>
                <FIELD NAME="assignee" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" COMMENT="Dude/Gal to be blamed"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="centerid" TYPE="foreign" FIELDS="centerid" REFTABLE="raomanager_centers" REFFIELDS="id" />
            </KEYS>
        </TABLE>

        <TABLE NAME="raomanager_centers" COMMENT="All the centers">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="Center Name"/>
                <FIELD NAME="nearbycenters" TYPE="char" LENGTH="255" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" COMMENT="Dude/Gal to be blamed"/>
                <FIELD NAME="zone" TYPE="char" LENGTH="100" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" COMMENT=""/>
                <FIELD NAME="status" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" COMMENT=""/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
