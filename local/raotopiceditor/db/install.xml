<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/raotopiceditor/db" VERSION="20101203" COMMENT="XMLDB file for Moodle local/raotopiceditor"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="raotopiceditor_topics" COMMENT="Topic Entries">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT=""/>
                <FIELD NAME="subject" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true"/>
                <FIELD NAME="portalref" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="DTP Portal reference"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

        <TABLE NAME="raotopiceditor_topic_entries" COMMENT="Entries in every topic">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
                <FIELD NAME="topicid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="topic ID"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true"  COMMENT="Entry Name"/>
                <FIELD NAME="type" TYPE="char" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="Resource Type"/>
                <FIELD NAME="sort" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false"/>
                <FIELD NAME="value" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="topic" TYPE="foreign" FIELDS="topicid" REFTABLE="raotopiceditor_topics" REFFIELDS="id" />
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
