<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/raobooklet/db" VERSION="20101203" COMMENT="XMLDB file for Moodle mod/raobooklet"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="raobooklet" COMMENT="Data pertaining to uploaded booklets.">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
                <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="Course raobooklet activity belongs to"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="name field for moodle instances"/>
                <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="General introduction of the raobooklet activity [FOR FUTURE EXPANSION]"/>
                <!--<FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" COMMENT="Format of the intro field (MOODLE, HTML, MARKDOWN...)[FOR FUTURE EXPANSION]"/>-->
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="filename" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Name of the file/pdf WITHOUT extension"/>
                <FIELD NAME="subject" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="The name of the subject the booklet belongs to."/>
                <FIELD NAME="topics" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="The name of the subject the booklet belongs to."/>
                <FIELD NAME="standard" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="The standard to which the booklet belongs"/>
                <FIELD NAME="year" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="Year in which the booklet was published"/>
                <FIELD NAME="description" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Any specific instructions for the students"/>
                <FIELD NAME="notes" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Any specific, private notes about the booklet"/>
                <FIELD NAME="downloadable" TYPE="int" LENGTH="4" DEFAULT="0" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" COMMENT="Is the booklet downloadable?"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
            </INDEXES>
        </TABLE>

        <TABLE NAME="raobooklet_feedback" COMMENT="Ratings by users.">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="raobookletid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
                <FIELD NAME="rating" TYPE="int" LENGTH="4" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="comment" TYPE="text" NOTNULL="false" SEQUENCE="false" />
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="UserId" />
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
                <KEY NAME="raobookletid" TYPE="foreign" FIELDS="raobookletid" REFTABLE="raobooklet" REFFIELDS="id" />
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
